<style>
    .register-container {
        max-width: 360px;
        margin: auto;
        margin-top: 64px;
    }
</style>

<div class="register-container">
    <h1><b>CODERStore</b></h1>
    <h2>Registro de usuario</h2>

    <form action="/api/register/register" method="post" style="margin-top: 32px;">
        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <input type="text" name="first_name" class="form-control" placeholder="Nombre" required="required">
        </div>

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <input type="text" name="last_name" class="form-control" placeholder="Apellido" required="required">
        </div>

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
    <label for="gender">Género:</label>
    <select name="gender" class="form-control" required="required">
        <option value="Male">Masculino</option>
        <option value="Female">Femenino</option>
    </select>
</div>


        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <input type="text" name="email" class="form-control" placeholder="Correo electrónico" required="required">
        </div>

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <input type="text" name="age" class="form-control" placeholder="Edad" required="required">
        </div>

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <input type="password" name="password" class="form-control" placeholder="Contraseña" required="required">
        </div>


        <button type="submit" class="btn btn-success">Registrarse</button>
    </form>
</div>
